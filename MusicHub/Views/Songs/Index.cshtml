@model MusicHub.Core.Models.SearchModel

@{
    ViewData["Title"] = "Index";
}
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/body.css" />

<section class="counter_feature">
    <div class="col-lg-12 card-margin">
        <div class="head">
            <div class="row">
                <div class="col-1">
                    <h1>
                        Songs
                    </h1>
                </div>
                <div class="col-2">
                    <a asp-action="Create">Create New</a>
                </div>
            </div>
        </div>
        <div class="card search-form">
            <div class="card-body p-0">
                <form asp-controller="Songs" asp-action="Index" method="get">
                    <div class="row">
                        <div class="col-12">
                            <div class="row no-gutters">

                                <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                    <select class="form-control" asp-for="Genre" asp-items="Model.Genres">
                                        <option value="">All</option>
                                    </select>
                                </div>
                                <div class="col-lg-8 col-md-6 col-sm-12 p-0">
                                    <input type="text" asp-for="SearchString" placeholder="Search..." class="form-control">
                                </div>
                                <div class="col-lg-1 col-md-3 col-sm-12 p-0">
                                    <button type="submit" class="btn btn-base" value="Filter">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <table class="table user-list">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Songs[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Songs[0].Duration)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Songs[0].ReleaseDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Songs[0].Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Songs[0].AlbumName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Songs[0].WriterName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Songs[0].Price)
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Songs)
            {
                <tr>
                    <td>
                        <img src="@Html.DisplayFor(modelItem => item.PictureURL)" alt="">
                        <a href="#" class="user-link">  @Html.DisplayFor(modelItem => item.Name)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AlbumName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WriterName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td style="width: 15%;">
                        <a asp-action="Details" asp-route-id="@item.Id" class="table-link">
                            <span class="fa-stack">
                                <i class="fa fa-square fa-stack-2x"></i>
                                <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                            </span>
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="table-link">
                            <span class="fa-stack">
                                <i class="fa fa-square fa-stack-2x"></i>
                                <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                            </span>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="table-link danger">
                            <span class="fa-stack">
                                <i class="fa fa-square fa-stack-2x"></i>
                                <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                            </span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</section>
